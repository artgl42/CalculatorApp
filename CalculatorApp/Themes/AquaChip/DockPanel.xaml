<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:CalculatorApp.Themes.AquaChip">

    <LinearGradientBrush  x:Key="ForegroundGradient" StartPoint="0.5,0" EndPoint="0.5,1">
        <GradientStop Color="Black" Offset="0"/>
        <GradientStop Color="DarkCyan" Offset="0.5"/>
        <GradientStop Color="DeepSkyBlue" Offset="1"/>
    </LinearGradientBrush>

    <Style TargetType="{x:Type DockPanel}">
        <Setter Property="Opacity" Value="0.90" />
        <Setter Property="Background" Value="{StaticResource ForegroundGradient}" />
    </Style>

</ResourceDictionary>