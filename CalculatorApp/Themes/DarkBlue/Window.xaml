<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:CalculatorApp.Themes.DarkBlue">

    <SolidColorBrush x:Key="BackgroundBrush" Color="Black" />
    
    <Style x:Key="WindowStyle" TargetType="Window">
        <Setter Property="Height" Value="384" />
        <Setter Property="Width" Value="512" />
        <Setter Property="MinHeight" Value="128" />
        <Setter Property="MinWidth" Value="128" />
        <Setter Property="FontFamily" Value="Arial Black" />
        <Setter Property="Background" Value="{StaticResource BackgroundBrush}" />
    </Style>

</ResourceDictionary>